<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/tx 
		http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

	<!-- 这里是PropertiesFactoryBean类，它也有个locations属性，也是接收一个数组 -->
	<bean id="hanlp" class="org.springframework.beans.factory.config.PropertiesFactoryBean">  
	    <property name="locations">  
	        <array>  
	            <value>classpath:hanlp.properties</value>  
	        </array>  
	    </property>  
	</bean>
	<!-- 生产环境配置文件 -->  
	<beans profile="prod">
		<bean id="chatbot" class="org.springframework.beans.factory.config.PropertiesFactoryBean">  
		    <property name="locations">  
		        <array>  
		            <value>classpath:prod/chatbot.properties</value>  
		        </array>  
		    </property>  
		</bean>
	</beans>
	<!-- 测试环境配置文件 -->  
	<beans profile="test">
		<bean id="chatbot" class="org.springframework.beans.factory.config.PropertiesFactoryBean">  
		    <property name="locations">  
		        <array>  
		            <value>classpath:test/chatbot.properties</value>  
		        </array>  
		    </property>  
		</bean>
	</beans>
	<!-- 开发环境配置文件 -->  
	<beans profile="dev">
		<bean id="chatbot" class="org.springframework.beans.factory.config.PropertiesFactoryBean">  
		    <property name="locations">  
		        <array>  
		            <value>classpath:dev/chatbot.properties</value>  
		        </array>  
		    </property>  
		</bean>
	</beans>
	
</beans>